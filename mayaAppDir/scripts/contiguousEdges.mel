global proc contiguousEdges(float $maxAngle){	$edges = `ls -sl -fl`;	$tmp = convertPoly($edges, "tf");	$tmp = convertPolyIn($tmp, "tv");	$vertToCheck = stringArrayRemove($tmp, convertPoly($edges, "tv"));	string $vert;	string $newEdges[] = {};	for ($vert in $vertToCheck)		{		$edgesConv = convertPoly({$vert},"te");		$edgesToCheck = stringArrayRemove ($edges, $edgesConv);		$tmp = stringArrayRemove($edgesToCheck, $edgesConv);		$edgeMain = $tmp[0];		string $edgeToCheck;		string $edgeMainVert[] = {};		$edgeMainVert = stringArrayRemove({$vert}, convertPoly({$edgeMain}, "tv"));		$edgeMainVert[1] = $vert;		$vectorMain = twoVerticesVector($edgeMainVert[0], $edgeMainVert[1]);		for ($edgeToCheck in $edgesToCheck)			{			string $currentVertices[] = stringArrayRemove({$vert},convertPoly({$edgeToCheck},"tv"));			$currentVertices[1] = $vert;			$currentVector = twoVerticesVector($currentVertices[1], $currentVertices[0]);			$angle = angleD ($vectorMain, $currentVector);			if ($angle < $maxAngle)				$newEdges[`size $newEdges`] = $edgeToCheck;			}		}	select -add $newEdges;}